{
  /* window config */
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "window.restoreWindows": "all",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.pdf": "latex-workshop-pdf-hook",
  },
  "window.zoomLevel": 0.5,
  "workbench.panel.defaultLocation": "right",

  /* auto complete related */
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.tabCompletion": "on",

  /* general programming editor setting */
  "editor.bracketPairColorization.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Atom One Dark",
  "editor.guides.bracketPairs": true,
  "editor.smartSelect.selectSubwords": false,
  "editor.tokenColorCustomizations": {
    "[Atom One Dark]": {
      "comments": "#07db72",
    },
  },
  "editor.minimap.enabled": false,

  /* untrusted file open */
  "security.workspace.trust.untrustedFiles": "open",

  /* status bar color */
  "workbench.colorCustomizations": {
    "statusBar.background": "#8FBCBB",
    "statusBar.noFolderBackground": "#8FBCBB",
    "statusBar.debuggingBackground": "#8FBCBB",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E",
  },
  /* terminal config */
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyleInactive": "line",

  /* default language agnositic font */
  "editor.formatOnSave": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 11,
  "editor.fontWeight": "normal",
  // wrap setting
  "editor.accessibilitySupport": "off",
  "editor.wordWrap": "wordWrapColumn",

  /* python related config */
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.analysis.autoFormatStrings": true,
  "[python]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.fontFamily": "Fira Code Light",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.rulers": [120],
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit",
      "source.fixAll": "explicit",
    },
  },

  /* lint choice, make sure ruff is used */
  "ruff.enable": true,

  /* dockerfile config */
  "[dockerfile]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.fontFamily": "Fira Code Light",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.rulers": [120],
  },

  /* mark down config */
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
  },
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.tableFormatter.normalizeIndentation": true,
  "markdown.extension.preview.autoShowPreviewToSide": false,
  "markdown.preview.fontSize": 11,
  "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": false,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "markdown-preview-enhanced.revealjsTheme": "none.css",
  "markdown-preview-enhanced.enablePreviewZenMode": false,
  "editor.pasteAs.preferences": [
    "markdown.link.uri",
    "uri.path.absolute",
    "text.updateLinks.markdown",
    "text.plain",
  ],

  /* jsonc config */
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  /* javascript config */
  "[javascript]": {
    "editor.indentSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "git.confirmSync": false,

  // docstring format
  "autoDocstring.docstringFormat": "numpy",
  "python.analysis.typeCheckingMode": "basic",

  // ansible extension
  "ansible.lightspeed.enabled": false,
  "ansible.lightspeed.suggestions.enabled": false,
  "ansible.python.interpreterPath": "/usr/local/bin/python3",
  "ansible.ansible.path": "/Users/lunyanghuang/.local/bin/ansible",
  "ansible.validation.lint.path": "/Users/lunyanghuang/anaconda3/envs/ansible/bin/ansible-lint",
  "update.showReleaseNotes": false,
}
