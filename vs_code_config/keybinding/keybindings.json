  {
    "key": "cmd+right",
    "command": "-cursorEnd",
    "when": "textInputFocus",
  },
  {
    "key": "shift+cmd+right",
    "command": "-cursorEndSelect",
    "when": "textInputFocus",
  },
  {
    "key": "shift+cmd+left",
    "command": "-cursorHomeSelect",
    "when": "textInputFocus",
