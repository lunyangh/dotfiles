// Place your key bindings in this file to override the defaults
/*
version log:
v3:
This version fits following keyboard configuration:

915 TKL keybaord connected to mac:
  * command key maps to left control,
  * control key maps to window key,
  * option key maps to alt key.
  * control key also maps to Caps key. this is necessary for using cap key as  modifier key to enable cap key + space type modifier. as mac does not suppport command key as modifier.

The key adjustment here aims to mimic windows keyboard with the key adjustment

*/

[
  /* editor scrolling */
  {
    "key": "ctrl+d",
    "command": "editorScroll",
    "args": {
      "by": "halfPage",
      "to": "down",
      "revealCursor": true, // if you want to move cursor
      "value": 1,
    },
    "when": "editorFocus",
  },
  {
    "key": "ctrl+u",
    "command": "editorScroll",
    "args": {
      "by": "halfPage",
      "to": "up",
      "revealCursor": true, // if you want to move cursor
      "value": 1,
    },
    "when": "editorFocus",
  },

  /* editor text manipulation*/
  // {
  //   "key": "cmd+l",
  //   "command": "-expandLineSelection",
  //   "when": "textInputFocus",
  // },
  // {
  //   "key": "ctrl+; l",
  //   "command": "expandLineSelection",
  //   "when": "textInputFocus",
  // },

  // lower and upper letter transform
  {
    "key": "ctrl+; u",
    "command": "editor.action.transformToUppercase",
    "when": "textInputFocus",
  },
  {
    "key": "ctrl+; l",
    "command": "editor.action.transformToLowercase",
    "when": "textInputFocus",
  },
  // delete line
  {
    "key": "ctrl+; k",
    "command": "editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly",
  },
  {
    "key": "shift+cmd+k",
    "command": "-editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly",
  },
  // dup line
  {
    "key": "ctrl+; d",
    "command": "editor.action.duplicateSelection",
  },
  // insert at cursor
  {
    "key": "shift+alt+i",
    "command": "-editor.action.insertCursorAtEndOfEachLineSelected",
    "when": "editorTextFocus",
  },
  {
    "key": "shift+cmd+l",
    "command": "-editor.action.insertCursorAtEndOfEachLineSelected",
    "when": "editorHasSelection && editorTextFocus",
  },
  {
    "key": "ctrl+; i",
    "command": "editor.action.insertCursorAtEndOfEachLineSelected",
  },
  // command to search current selection in text and add next match to selection as multiple cursor
  {
    "key": "alt+f",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus",
  },
  {
    "key": "cmd+d",
    "command": "-editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus",
  },
  // line comment

  // cmd is default, not need to add
  // {
  //   "key": "cmd+/",
  //   "command": "editor.action.commentLine",
  //   "when": "editorTextFocus && !editorReadonly"
  // },
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly",
  },
  {
    "key": "shift+cmd+7",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus",
  },

  // block comment
  {
    "key": "ctrl+space /",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly",
  },
  {
    "key": "shift+alt+a",
    "command": "-editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly",
  },

  /* Editor Navigation */
  // peek definition
  {
    "key": "ctrl+space shift+d",
    "command": "editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
  },
  {
    "key": "alt+f12",
    "command": "-editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
  },
  // access to breadcrumb
  {
    "key": "ctrl+space .",
    "command": "breadcrumbs.focusAndSelect",
    "when": "breadcrumbsPossible && breadcrumbsVisible",
  },
  {
    "key": "shift+cmd+.",
    "command": "-breadcrumbs.focusAndSelect",
    "when": "breadcrumbsPossible && breadcrumbsVisible",
  },
  // disable defaults for navigation.
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.gotoSymbol",
    "when": "!accessibilityHelpIsShown && !accessibleViewIsShown",
  },
  {
    "key": "cmd+t",
    "command": "-workbench.action.showAllSymbols",
  },

  /* copy paste */
  // default copy paste function, use cmd, no need to change.
  // {
  //   "key": "cmd+v",
  //   "command": "-editor.action.clipboardPasteAction"
  // },
  // {
  //   "key": "cmd+c",
  //   "command": "-editor.action.clipboardCopyAction"
  // },

  /* Autocomplete & suggestions */

  // trigger parameter hint
  {
    "key": "ctrl+space shift+/",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus",
  },
  {
    "key": "shift+cmd+space",
    "command": "-editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus",
  },

  // trigger suggest
  {
    "key": "ctrl+space space",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible",
  }, //TODO: this to be modified
  {
    "key": "alt+escape",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible",
  },
  {
    "key": "ctrl+space",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible",
  },
  {
    "key": "cmd+i",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible",
  },
  // cycle through suggestions when in dropdown mode
  {
    "key": "ctrl+j",
    "command": "-editor.action.joinLines",
    "when": "editorTextFocus && !editorReadonly",
  },
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "down",
    "command": "-selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "cmd+down",
    "command": "-selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "up",
    "command": "-selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  {
    "key": "cmd+up",
    "command": "-selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion",
  },
  // diable defaults for autocomplete
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile",
  },
  {
    "key": "shift+cmd+n",
    "command": "-workbench.action.newWindow",
  },

  /* inline suggestions */
  {
    "key": "alt+k",
    "command": "editor.action.inlineSuggest.showNext",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  {
    "key": "alt+n",
    "command": "editor.action.inlineSuggest.showNext",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  {
    "key": "alt+]",
    "command": "-editor.action.inlineSuggest.showNext",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  {
    "key": "alt+j",
    "command": "editor.action.inlineSuggest.showPrevious",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  {
    "key": "alt+p",
    "command": "editor.action.inlineSuggest.showPrevious",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  {
    "key": "alt+[",
    "command": "-editor.action.inlineSuggest.showPrevious",
    "when": "inlineSuggestionVisible && !editorReadonly",
  },
  // disable default
  {
    "key": "alt+cmd+p",
    "command": "-togglePreserveCase",
    "when": "editorFocus",
  },
  {
    "key": "alt+cmd+p",
    "command": "-toggleSearchPreserveCase",
    "when": "searchViewletFocus",
  },

  /* docstring */
  {
    "key": "ctrl+space d",
    "command": "autoDocstring.generateDocstring",
    "when": "editorTextFocus",
  },
  {
    "key": "shift+cmd+2",
    "command": "-autoDocstring.generateDocstring",
    "when": "editorTextFocus",
  },

  /* command palette */
  // primary entry of all commands
  {
    "key": "ctrl+space p",
    "command": "workbench.action.quickOpen",
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen",
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen",
  },
  {
    "key": "ctrl+space shift+p",
    "command": "workbench.action.showCommands",
  },
  {
    "key": "shift+cmd+p",
    "command": "-workbench.action.showCommands",
  },
  {
    "key": "ctrl+shift+p",
    "command": "-workbench.action.showCommands",
  },
  // navigate command palatte
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpen",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen",
  },

  /* Pnael Access */
  // focus file exploror
  {
    "key": "cmd+\\",
    "command": "workbench.files.action.focusFilesExplorer",
  },
  {
    "key": "cmd+\\",
    "command": "-workbench.action.splitEditor",
  },
  {
    "key": "cmd+\\",
    "command": "-workbench.action.terminal.split",
    "when": "terminalFocus && terminalProcessSupported",
  },

  // focus terminal, pane
  {
    "key": "alt+\\",
    "command": "workbench.action.togglePanel",
  },
  {
    "key": "cmd+j",
    "command": "-workbench.action.togglePanel",
  },
  // access to outline
  {
    "key": "cmd+alt+\\",
    "command": "outline.focus",
  },
  // primary bar
  {
    "key": "ctrl+space \\",
    "command": "workbench.action.toggleSidebarVisibility",
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility",
  },
  // sec bar
  {
    "key": "ctrl+space shift+\\",
    "command": "workbench.action.toggleAuxiliaryBar",
  },
  {
    "key": "alt+cmd+b",
    "command": "-workbench.action.toggleAuxiliaryBar",
  },
  // max panel
  {
    "key": "ctrl+space z",
    "command": "workbench.action.toggleMaximizedPanel",
  },
  // disable defaults
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled",
  },
  {
    "key": "shift+cmd+m",
    "command": "-workbench.actions.view.problems",
    "when": "workbench.panel.markers.view.active",
  },

  /* panel navigation */
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "(editorFocus || sideBarFocus || activeEditorGroupEmpty || terminalFocus || outlineFocused) && !suggestWidgetVisible",
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "(editorFocus || sideBarFocus || activeEditorGroupEmpty || terminalFocus || outlineFocused) && !suggestWidgetVisible",
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "(editorFocus || sideBarFocus || activeEditorGroupEmpty || terminalFocus || outlineFocused) && !suggestWidgetVisible",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "(editorFocus || sideBarFocus || activeEditorGroupEmpty || terminalFocus || outlineFocused) && !suggestWidgetVisible",
  },
  // focus current editor
  {
    "key": "ctrl+space e",
    "command": "workbench.action.focusActiveEditorGroup",
  },

  /* list & Tree navigation */
  // breadcrumbs navigation with ctrl
  {
    "key": "ctrl+h",
    "command": "breadcrumbs.focusPrevious",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  {
    "key": "ctrl+l",
    "command": "breadcrumbs.focusNext",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  {
    "key": "ctrl+j",
    "command": "breadcrumbs.focusDown",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  {
    "key": "ctrl+k",
    "command": "breadcrumbs.focusUp",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  // list navigation with ctrl
  {
    "key": "ctrl+o",
    "command": "list.toggleExpand",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "ctrl+u",
    "command": "list.focusParent",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "ctrl+k",
    "command": "list.focusUp",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "ctrl+j",
    "command": "list.focusDown",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "ctrl+u",
    "command": "-cursorUndo",
    "when": "textInputFocus",
  },
  // breadcrumbs without ctrl
  {
    "key": "h",
    "command": "breadcrumbs.focusPrevious",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  {
    "key": "l",
    "command": "breadcrumbs.focusNext",
    "when": "breadcrumbsActive && breadcrumbsVisible",
  },
  // list navigation without ctrl
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "o",
    "command": "list.toggleExpand",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },
  {
    "key": "u",
    "command": "list.focusParent",
    "when": "listFocus && !inputFocus && !treestickyScrollFocused",
  },

  /* editor groups */
  // move editor to other group
  // ctrl + space + hjkl   move window to group in direction
  {
    "key": "ctrl+space l",
    "command": "workbench.action.moveEditorToRightGroup",
  },
  {
    "key": "ctrl+space h",
    "command": "workbench.action.moveEditorToLeftGroup",
  },
  {
    "key": "ctrl+space j",
    "command": "workbench.action.moveEditorToAboveGroup",
  },
  {
    "key": "ctrl+space k",
    "command": "workbench.action.moveEditorToBelowGroup",
  },
  // ctrl + space + shift hjkl to copy and split editor in direction
  {
    "key": "ctrl+space shift+l",
    "command": "workbench.action.splitEditorRight",
  },
  {
    "key": "ctrl+space shift+h",
    "command": "workbench.action.splitEditorLeft",
  },
  {
    "key": "ctrl+space shift+j",
    "command": "workbench.action.splitEditorUp",
  },
  {
    "key": "ctrl+space shift+k",
    "command": "workbench.action.splitEditorDown",
  },
  // focus left/right group
  {
    "key": "ctrl+space left",
    "command": "workbench.action.focusLeftGroup",
  },
  {
    "key": "cmd+k cmd+left",
    "command": "-workbench.action.focusLeftGroup",
  },
  {
    "key": "ctrl+space right",
    "command": "workbench.action.focusRightGroup",
  },
  {
    "key": "cmd+k cmd+right",
    "command": "-workbench.action.focusRightGroup",
  },

  /* Editor Tabs */
  // {
  //   "key": "ctrl+tab",
  //   "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
  //   "when": "!activeEditorGroupEmpty"
  // },
  // change editor focus
  {
    "key": "alt+pageup",
    "command": "workbench.action.previousEditor",
  },
  {
    "key": "alt+pagedown",
    "command": "workbench.action.nextEditor",
  },
  // navigate editor within group
  {
    "key": "ctrl+space pageup",
    "command": "workbench.action.previousEditorInGroup",
  },
  {
    "key": "cmd+k alt+cmd+left",
    "command": "-workbench.action.previousEditorInGroup",
  },
  {
    "key": "ctrl+space pagedown",
    "command": "workbench.action.nextEditorInGroup",
  },
  {
    "key": "cmd+k alt+cmd+right",
    "command": "-workbench.action.nextEditorInGroup",
  },
  // close editor
  {
    "key": "alt+w",
    "command": "workbench.action.closeActiveEditor",
  },
  {
    "key": "alt+w",
    "command": "workbench.action.closeGroup",
    "when": "activeEditorGroupEmpty && multipleEditorGroups",
  },
  // disable defauts
  {
    "key": "cmd+k shift+cmd+left",
    "command": "-workbench.action.moveEditorLeftInGroup",
  },
  {
    "key": "cmd+k shift+cmd+right",
    "command": "-workbench.action.moveEditorRightInGroup",
  },

  /* zen mode */
  {
    "key": "ctrl+; z",
    "command": "workbench.action.toggleZenMode",
  },
  {
    "key": "cmd+k z",
    "command": "-workbench.action.toggleZenMode",
    "when": "!isAuxiliaryWindowFocusedContext",
  },

  /* File explorer */
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus",
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && !inputFocus",
  },
  {
    "key": "ctrl+space ctrl+a",
    "command": "fileutils.newFolderAtRoot",
    "when": "filesExplorerFocus && !inputFocus",
  },

  {
    "key": "r r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus",
  },
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus",
  },
  {
    "key": "y p",
    "command": "copyFilePath",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus",
  },
  {
    "key": "alt+cmd+c",
    "command": "-copyFilePath",
    "when": "!editorFocus",
  },
  {
    "key": "shift+alt+cmd+c",
    "command": "-copyRelativeFilePath",
    "when": "!editorFocus",
  },
  {
    "key": "cmd+k shift+alt+cmd+c",
    "command": "-copyRelativeFilePath",
    "when": "editorFocus",
  },

  // find in folder
  {
    "key": "ctrl+space f",
    "command": "filesExplorer.findInFolder",
    "when": "explorerResourceIsFolder && filesExplorerFocus && foldersViewVisible && !inputFocus",
  },
  {
    "key": "shift+alt+f",
    "command": "-filesExplorer.findInFolder",
    "when": "explorerResourceIsFolder && filesExplorerFocus && foldersViewVisible && !inputFocus",
  },

  /* search & replace */
  // find
  {
    "key": "cmd+f",
    "command": "actions.find",
    "when": "editorFocus || editorIsOpen",
  },
  // replace command for current editor
  {
    "key": "ctrl+space r",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen",
  },
  {
    "key": "alt+cmd+f",
    "command": "-editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen",
  },
  // replace command in workbench for all files
  {
    "key": "ctrl+space shift+r",
    "command": "workbench.action.replaceInFiles",
    "when": "editorFocus || editorIsOpen",
  },
  {
    "key": "shift+cmd+h",
    "command": "-workbench.action.replaceInFiles",
  },
  // search result navigation
  {
    "key": "ctrl+space n",
    "command": "editor.action.nextMatchFindAction",
    "when": "editorFocus",
  },
  {
    "key": "ctrl+space shift+n",
    "command": "editor.action.previousMatchFindAction",
    "when": "editorFocus",
  },
  {
    "key": "f3",
    "command": "-editor.action.nextMatchFindAction",
    "when": "editorFocus",
  },
  {
    "key": "shift+f3",
    "command": "-editor.action.previousMatchFindAction",
    "when": "editorFocus",
  },
  {
    "key": "shift+cmd+j",
    "command": "-workbench.action.search.toggleQueryDetails",
    "when": "inSearchEditor || searchViewletFocus",
  },

  /* cursor move */
  // cursor move to back/forward to previous/next location
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack",
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateBack",
  },
  {
    "key": "ctrl+-",
    "command": "-workbench.action.navigateBack",
    "when": "canNavigateBack",
  },
  {
    "key": "ctrl+shift+-",
    "command": "-workbench.action.navigateForward",
    "when": "canNavigateForward",
  },

  /* git */
  {
    "key": "ctrl+space g",
    "command": "git.openChange",
  },

  /* debugger */
  // send selection to repl
  {
    "key": "alt+a e",
    "command": "editor.debug.action.selectionToRepl",
  },
  // start debug
  {
    "key": "alt+a d",
    "command": "workbench.action.debug.start",
    "when": "debuggersAvailable && debugState == 'inactive'",
  },
  {
    "key": "alt+a shift d",
    "command": "workbench.action.debug.selectandstart",
    "when": "debuggersAvailable && debugState == 'inactive'",
  },
  // continue debug
  {
    "key": "alt+a d",
    "command": "wordkbench.action.debug.continue",
    "when": "debugState == 'stopped'",
  },
  {
    "key": "f5",
    "command": "-workbench.action.debug.continue",
    "when": "debugState == 'stopped'",
  },
  // stop debug
  {
    "key": "alt+a q",
    "command": "workbench.action.debug.stop",
    "when": "inDebugMode && !focusedSessionIsAttach",
  },
